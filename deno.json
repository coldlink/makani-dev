{
	"lock": true,
	"nodeModulesDir": "manual",
	"tasks": {
		"check": "deno fmt --check . && deno lint . && deno check **/*.ts && deno check **/*.tsx",
		"dev": "vite",
		"build": "vite build",
		"start": "deno serve -A _fresh/server.js",
		"update": "deno run -A -r jsr:@fresh/update ."
	},
	"lint": {
		"rules": {
			"tags": ["fresh", "recommended"]
		},
		"exclude": ["react-no-danger", "react-no-danger-with-children"]
	},
	"fmt": { "useTabs": true, "indentWidth": 2, "semiColons": true },
	"exclude": ["**/_fresh/*"],
	"imports": {
		"@/": "./",
		"@std/dotenv": "jsr:@std/dotenv@^0.225.5",
		"@std/front-matter": "jsr:@std/front-matter@^1.0.9",
		"@std/path": "jsr:@std/path@^1.1.3",
		"@tailwindcss/typography": "npm:@tailwindcss/typography@^0.5.19",
		"@types/mdast": "npm:@types/mdast@^4.0.4",
		"exifreader": "npm:exifreader@^4.33.1",
		"fresh": "jsr:@fresh/core@^2.2.0",
		"hast-util-from-html": "npm:hast-util-from-html@^2.0.3",
		"lucide-preact": "npm:lucide-preact@^0.561.0",
		"preact": "npm:preact@^10.27.2",
		"@preact/signals": "npm:@preact/signals@^2.5.0",
		"@fresh/plugin-vite": "jsr:@fresh/plugin-vite@^1.0.8",
		"preact-render-to-string": "npm:preact-render-to-string@^6.6.4",
		"rehype-raw": "npm:rehype-raw@^7.0.0",
		"rehype-stringify": "npm:rehype-stringify@^10.0.1",
		"remark-directive": "npm:remark-directive@^4.0.0",
		"remark-gfm": "npm:remark-gfm@^4.0.1",
		"remark-parse": "npm:remark-parse@^11.0.0",
		"remark-rehype": "npm:remark-rehype@^11.1.2",
		"unified": "npm:unified@^11.0.5",
		"unist-util-visit": "npm:unist-util-visit@^5.0.0",
		"vite": "npm:vite@^7.1.3",
		"tailwindcss": "npm:tailwindcss@^4.1.10",
		"@tailwindcss/vite": "npm:@tailwindcss/vite@^4.1.12"
	},
	"compilerOptions": {
		"lib": ["dom", "dom.asynciterable", "dom.iterable", "deno.ns"],
		"jsx": "precompile",
		"jsxImportSource": "preact",
		"jsxPrecompileSkipElements": [
			"a",
			"img",
			"source",
			"body",
			"html",
			"head",
			"title",
			"meta",
			"script",
			"link",
			"style",
			"base",
			"noscript",
			"template"
		],
		"types": ["vite/client"]
	},
	"allowScripts": ["npm:esbuild@0.25.7", "npm:exifreader@4.33.1"]
}
